Mongoid support for #find_by_attributes #find_by_xxx in finder

Artist.create(:name => "Mitesh", :title => "Mr.")
Artist.find_by_name("Mitesh")
Artist.find_by_name_and_title("Mitesh", "Mr.")
Artist.find_first_by_name("Mitesh")
Artist.find_first_by_name_and_title("Mitesh", "Mr.")
Artist.find_last_by_name_and_title("Mitesh", "Mr.")
Artist.find_last_by_name("Mitesh")